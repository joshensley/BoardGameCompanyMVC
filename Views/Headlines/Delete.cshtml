    ViewData["Title"] = "Delete Headline";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-danger">Delete Headline</h2>

    </div>
</div>
<br />

<h3 class="text-danger">Are you sure you want to delete?</h3>
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardGame.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardGame.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
