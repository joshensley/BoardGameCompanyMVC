            @(Model.IsActive == true ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFilePath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageFilePath" alt="headline" width="300" />
