@model IEnumerable<BoardGameCompanyMVC.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<br />
<div class=" container row p-0 m-0">
    <div class="col-9">
        <h2>Customers List</h2>
    </div>
    <div class="col-3">
        <a asp-area="Identity" asp-page="/Account/Register" type="button" class="btn btn-info form-control text-white">
            <i class="fas fa-plus"></i> Create New Customer
        </a>
    </div>
</div>
<hr />


<br />
<table class="table border">
    <tr class="table-secondary">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.PhoneNumber)
            </td>
            <td>
                <a asp-area=""
                   asp-controller="Users"
                   asp-action="Edit"
                   asp-route-id="@item.Id"
                   type="button"
                   class="btn btn-success">
                    <i class="fas fa-edit"></i>
                </a>
                <a asp-area=""
                   asp-controller="Users"
                   asp-action="Delete"
                   asp-route-id="@item.Id"
                   type="button"
                   class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                </a>

            </td>
        </tr>
    }

</table>


