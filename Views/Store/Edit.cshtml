@model BoardGameCompanyMVC.Models.UserBoardGameReview
@{
    ViewData["Title"] = "Edit Review";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Edit Review</h2>
    </div>
</div>
<br />

<div class="border container" style="padding:30px;">
    <form asp-action="Edit" asp-route-id="@Model.ID">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="hidden" asp-for="UserReviewDate" value="@DateTime.Parse(DateTime.Now.ToString("yyyy/MM/dd"))" />
        <input type="hidden" asp-for="BoardGameID" value="@Model.BoardGameID" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="UserReview"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="UserReview" class="form-control"></textarea>
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="UserReview" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" asp-route-id="@Model.BoardGameID" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}