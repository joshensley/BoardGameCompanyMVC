@model BoardGameCompanyMVC.Models.UserBoardGameReview
@{
    ViewData["Title"] = "Delete Review";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-danger">Delete Review</h2>
    </div>
</div>
<br />

<div class="border container" style="padding:30px">
    <dl class="row">
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.UserReview)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.UserReview)
        </dd>
    </dl>

    <div class="form-group row">
        <div class="col-3 offset-4">
            <form asp-action="Delete" asp-route-idDelete="@Model.ID">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </form>
        </div>
        <div class="col-3">
            <a class="btn btn-success form-control" asp-action="Index" asp-route-id="@Model.BoardGameID">Back</a>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}